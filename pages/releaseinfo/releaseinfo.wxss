


.weui-cell::after,
.weui-cells::after{
	border-bottom:1rpx solid #f1f2f6
}

.weui-cell::before,
.weui-cells::before{
	border: none;
}

.weui-cell__bd{
	padding-left: 5px;
	font-size: 14px;
	color: #363638;
}

.main-c{ color: #ef7100; }

.weui-cell__ft{
	color: #363638;
	font-size: 12px;
}

.weui-cell__hd .img{
	margin-right: 5px;
	vertical-align: middle;
	width: 24px;
	height: 24px;
}



.weui-cells{
	margin-top: 0;
}

.weui-cell{
	padding: 10px;
}

.weui-uploader__bd{
	margin-bottom: -9px;
}

.input-text{
	padding-right: 15px;
	color: #363638;
}


.textarea-body{
	position: relative;
	padding: 12px 20px 12px 45px;
	border-bottom: 1px solid #f1f2f6;
}

.ico-textarea{
	position: absolute;
	top: 12px;
	left: 20px;
	width: 16px;
	height: 16px;
}

.textarea-text{
	width: 100%;
	height: 100px;
}

.textarea-placeholder{
	color: #cacbcf;
}

.small-tip{
	padding: 10rpx 20rpx;
	color: #c9cace;
	font-size: 12px;
}


.content-body{
	border-top: 5px solid #f1f2f6;
}

.btn_1{
	width: 120px;
	font-size: 12px;
	background: #ffffff;
	color: #ef7100;
}

.active{
	border: 1px solid #ef7100;
}

.submit-btn{
	margin: 20px 40px 80px 40px;
	background: #b1b4bd;
	color: #ffffff;
}

.submit-btn__active{
	background: #ef7100;
}


.disclaimer{
	padding: 10px 15px 10px 15px;
	font-size: 12px;
	color: #b0b4bd;

}

.disclaimer .ico-img{
	padding-right: 10px;
	width: 18px;
	height: 18px;
}


.tip-body{
	padding: 5px 15px;
	line-height: 28px;
	border-bottom: 1px solid #f1f2f4;
}

.tip-body .tip{
	color: #b0b4bd;
	font-size: 12px;
}

.tip-body .total{
	color: #363638;
	font-size: 14px;
	text-align: center;
}

.tip-body_active{
	font-weight: bold;
	color: #ef7100;
}