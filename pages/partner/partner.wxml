
<view class="page">
	<form bindsubmit="formSubmit">
		<view class="weui-cells weui-cells_after-title">
			<picker mode="region" bindchange="bindRegionChange" value="{{region}}">
		        <view class="weui-cell weui-cell_access">
		            <view class="weui-cell__bd">选择地区</view>
		            <view class="weui-cell__ft weui-cell__ft_in-access">{{region}}</view>
		        </view>
		    </picker>
	    </view>

	    <view class="textarea-body">
	    	<image src="/static/images/ico_24/7.png" class="ico-textarea" />
	    	<textarea class="textarea-text" name="descp" bindinput="onKeyInput" placeholder="请说明你成为合伙人的优势条件" placeholder-class="textarea-placeholder" />
	    </view>
	    

		<view class="weui-cells weui-cells_after-title">
			<view class="weui-cell weui-cell_access">
		        <view class="weui-cell__hd">
		            <image src="/static/images/ico_44/9.png" class="img"></image>
		        </view>
		        <view class="weui-cell__bd">
		        	<input type="text" class="input-text" name="name" placeholder-class="input-placeholder" placeholder="请输入姓名" placeholder-class="textarea-placeholder" />
		        </view>
		    </view>
	    </view>

	    <view class="weui-cells weui-cells_after-title">
	        <view class="weui-cell weui-cell_access">
		        <view class="weui-cell__hd">
		            <image src="/static/images/ico_44/10.png" class="img"></image>
		        </view>
		        <view class="weui-cell__bd">
		        	<input type="number" class="input-text" name="telephone" placeholder-class="input-placeholder" placeholder="请输入联系方式" placeholder-class="textarea-placeholder" />
		        </view>
		    </view>
	    </view>


		<button class="submit-btn {{!isSubmit?'':'active'}}" disabled="{{!isSubmit}}" formType="submit" >提交</button>
	</form>
	
    
</view>