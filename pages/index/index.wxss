
.page{
	background: #f1f2f6;
}

.b_white{
	background: #ffffff;
}

.weui-search-bar{
	z-index: 100;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	background: #ffffff;
}

.weui-search-bar__form{
	border: none;
	line-height: 32px;
	height: 32px;
	background: #eff0f2;
	font-size: 12px;
}

.search-text{
	line-height: 32px;
	height: 32px;
	color: #999;
}

.weui-icon-search_in-box{
	top: 7px;
}

.weui-search-bar__input{
	height: 32px;
	line-height: 32px;
	font-size: 12px;
}

.city_body{
	margin-right: 30rpx;
	position: relative;
	height: 32px;
	line-height: 32px;
	font-size: 14px;
}

.city_body .ico_img{
	width: 15px;
	height: 15px;
	vertical-align: -1px;
}

.content_page{
	margin-bottom: 20rpx;
}

.notice_body{
	position: relative;
	padding: 20rpx 20rpx 20rpx 20rpx;
	background: #ffffff;
}

.notice_body .notice{
	width: 28px;
	height: 28px;
	float: left;
}

.notice_body .notice_content{
	padding-left: 10px;
	float: left;
	height: 28px;
	width: 280px;
	line-height: 28px;
}

.classify_body{
	position: relative;
	width: 100%;
}

.classify_body .item{
	padding-bottom: 40rpx;
	float: left;
	width: 25%;
	text-align: center;
}

.classify_body .item .img{
	width: 90rpx;
	height: 90rpx;
	vertical-align: middle;
	text-align: center;
}

.classify_body .item .text{
    padding-top: 15rpx;
	display: block;
	font-size: 14px;
	color: #363638;
}

.slide-image{
	width: 100%;
	height: 160px;
}

.nav-position{
	z-index: 200;
	position: fixed;
	top: 0;
	left: 0;
}

.nav-body{
	height: 100rpx;
	width: 100%;
	background: #ffffff;
	border-bottom: 1px solid #f1f2f6;
	border-top: 1px solid #f1f2f6;
}

.nav-body .item_view{
	position: relative;
	float: left;
	width: 33.333%;
}

.nav-body .item_view .title{
	position: relative;
	display: block;
	height: 100rpx;
	line-height: 100rpx;
	color: #b1b4bb;
}

.nav-body .item_view .active{
	color: #363638;
}


.nav-body .item_view .line{
	position: absolute;
	width: 30px;
	height: 2px;
	background: #ef7100;
}

.nav-body .item_view .line1{
	bottom: 8px;
	right: 12px;
}

.nav-body .item_view .line2{
	bottom: 8px;
	left: 48px;
}

.nav-body .item_view .line3{
	bottom: 8px;
	left: 8px;
}



